<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="bootstrap.min.css">
    <link rel="stylesheet" href="main.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-7 col-print-7 col-xs-7">
            <h1>{{ me }}<br />
                <small class="glitch-bg hidden-print">
                    <div class="glitch_word_box">
                        <div class="line"></div>
                        {% for i in [1,2,3] %}
                            <small id="word{{ i }}" class="glitch_word{{ i }} glitch-common">{{ title }}</small>
                        {% endfor %}
                    </div>
                </small>
                <small class="visible-print">{{ title }}</small>
            </h1>
        </div>

        <div class="col-md-3 col-print-5 col-xs-5">
            <p style="margin-top:35px">
                <small>
                    {{ location }}<br />
                    {{ phone }}<br />
                    <a href="mailto:{{ email }}">{{ email }}</a><br />
                </small>
            </p>
        </div>
    </div>

    <hr />

    <div class="row hidden-print">
        <div class="col-md-3 col-print-3">
            <h2>{{ skills.title }}</h2>
        </div>

        <div class="col-md-9 col-print-9">
            {% for skill in skills.list %}
                <div class="labels">
                    <span>{{ skill.lang }}</span>
                    <span>{{ skill.percent }}%</span>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{ skill.percent }}" aria-valuemin="0" aria-valuemax="100"
                         style="width: {{ skill.percent }}%;">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row visible-print">
        <div class="col-md-3 col-print-3">
            <h2>{{ skills.title }}</h2>
        </div>

        <div class="col-md-9 col-print-9">
            {% for skill in skills.list %}
                <span class="label label-info">{{ skill.lang }} ({{ skill.percent }}%)</span>
            {% endfor %}
        </div>
    </div>


    <hr class="visible-print" />

    <div class="row clearfix">
        <div class="col-md-12 col-print-12">
            <h2>{{ education.title }}</h2>
            <hr />

            {% for education in education.list | reverse %}
                <div class="row">
                    <div class="col-md-3 col-print-3">
                        <h3>{{ education.period }}</h3>
                    </div>

                    <ul class="col-md-9 col-print-9">
                        <li>{{ education.name }}</li>
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>

    <hr />

    <div class="row">

        <div class="col-md-12 col-print-12">
            <h2>{{ experience.title }}</h2>

            <hr />

            {% for exp in experience.list | reverse %}
                <div class="row">
                    <div class="col-md-3 col-print-3">
                        <h3>
                            <div>
                                <small>{{ exp.type }}, {{ exp.period }}</small>
                            </div>
                            {% if exp.comp %}
                                <div>{{ exp.comp }}</div>
                            {% endif %}
                            {% if exp.desc %}
                                <small><b>{{ exp.desc }}</b></small>
                                <br />
                            {% endif %}
                            {% if exp.link %}
                                <small>
                                    <a href="http://{{ exp.link }}" target="_blank">{{ exp.link }}</a>
                                </small>
                                <br />
                            {% endif %}
                        </h3>
                    </div>

                    {% if exp.projects %}
                        <div class="col-md-9 col-print-9">
                            {% for project in exp.projects %}
                                <h3>
                                    {% if project.name %}
                                        <b>{{ project.name }}</b>
                                    {% endif %}

                                    {% if project.link %}
                                        <a href="http://{{ project.link }}" target="_blank">{{ project.link }}</a>
                                    {% endif %}

                                    {% for link in project.links %}
                                        <a href="http://{{ link }}" target="_blank">{{ link }}</a>
                                    {% endfor %}

                                    <small>{{ project.period }}</small>

                                    <div><small>{{ project.resp }}</small></div>
                                </h3>

                                {% if project.tasks %}
                                    <ul>
                                        {% for task in project.tasks %}
                                            <li>{{ task }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>

                {% if loop.last === false %}
                <hr />
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>