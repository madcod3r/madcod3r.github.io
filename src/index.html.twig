<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="bootstrap.min.css">
    <link rel="stylesheet" href="print.css">
    <link rel="stylesheet" href="main.css">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-7 col-print-7 col-xs-7">
            <h1>{{ me }}<br />
                <small class="glitch-bg hidden-print">
                    <div class="glitch_word_box">
                        <div class="line"></div>
                        {% for i in [1,2,3] %}
                            <small id="word{{ i }}" class="glitch_word{{ i }} glitch-common">{{ title }}</small>
                        {% endfor %}
                    </div>
                </small>
                <small class="visible-print">{{ title }}</small>
            </h1>
        </div>

        <div class="col-md-3 col-print-5 col-xs-5">
            <p style="margin-top:35px">
                <small>
                    {{ location }}<br />
                    {{ phone }}<br />
                    <a href="mailto:{{ email }}">{{ email }}</a><br />
                </small>
            </p>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-3 col-print-3 print-hidden">
            <h3>{{ skills.title }}</h3>
        </div>

        <div class="col-md-9 col-print-9 visible-print">
            {% for skill in skills.list %}
                <span>{{ skill.lang }} ({{ skill.percent }}%)</span>
            {% endfor %}
        </div>

        <div class="col-md-9 col-print-9 hidden-print">
            {% for skill in skills.list %}
                <div class="labels">
                    <span>{{ skill.lang }}</span>
                    <span>{{ skill.percent }}%</span>
                </div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{ skill.percent }}" aria-valuemin="0" aria-valuemax="100"
                         style="width: {{ skill.percent }}%;">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <hr />

    <div class="row clearfix">
        <div class="col-md-12 col-print-12">
            <h2>{{ education.title }}</h2>
        </div>

        <hr />

        {% for education in education.list %}
            <div class="row">
                <div class="col-md-3 col-print-3">
                    <h4>{{ education.period }}</h4>
                </div>

                <ul class="col-md-9 col-print-9">
                    <li>{{ education.name }}</li>
                </ul>
            </div>
        {% endfor %}

    </div>

    <hr />

    <div class="row">

        <div class="col-md-12 col-print-12">
            <h2>{{ experience.title }}</h2>

            <!--hr />

            <div class="row">
                <div class="col-md-3 col-print-3">
